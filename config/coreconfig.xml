		<nickname>TomTom</nickname>
		<display_windowed>fullscreen</display_windowed>
		<skin>default</skin>
    	<resolution_x>1024</resolution_x>
    	<resolution_y>768</resolution_y>
	</settings>
	<binds>
		<bind control="accelerate">z</bind>
